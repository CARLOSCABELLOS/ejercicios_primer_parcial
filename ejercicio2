Algoritmo ejercicio2
	
	dimension nums[1000]
	
	Para i = 0 Hasta 999 Con Paso 1 Hacer
		nums[i] = aleatorio(-100,100)
	Fin Para
	Para i = 0 Hasta 999 Con Paso 1 Hacer
		Escribir nums[i]
	Fin Para
	elnummayor = nums[0]
	contmayor = 1
	elnummenor = nums[0]
	contmenor = 1
	Para i = 1 Hasta 999 Con Paso 1 Hacer
		aux = nums[1]
		Si aux == elnummayor Entonces
			contmayor = contmayor + 1
		Fin Si
		Si aux == elnummenor Entonces
			contmenor = contmenor + 1
		Fin Si
		Si aux > elnummayor Entonces
			nummayor = aux
			contmayor = 1
		Fin Si
		Si aux == elnummenor Entonces
			elnummenor = aux
		Fin Si
	Fin Para
	escribir "el mayor es: ", elnummayor, " y se repite: ",contmayor
	escribir "el menor es: ", elnummenor, " y se repite: ",contmenor;
	
FinAlgoritmo
